<head>
  <title>eAnkieta</title>
  <meta name="viewport" content="width=device-width" />
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag "mobile-device.css" %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>

<div class="score">


<center><h1>OCENA</h1></center>


<%= form_for :score, url: scores_path do |f| %>
    
    <%= f.hidden_field :id_survey , :value => @temp %>

  <p>
    <%= f.label :Ocena_ogólna %><br>
    <%= f.select :general_score, [['bardzo dobrze', 5], ['dobrze', 4], ['średnio',3], ['słabo', 2], ['bardzo słabo', 1]] %>
  </p>
  
  <p>
    <%= f.label :Ocena_tempa %><br>
    <%= f.select :tempo_score, [['bardzo szybko', 5], ['szybko', 4], ['idealnie',3], ['wolno', 2], ['bardzo wolno', 1]] %>
  </p>

      <p>
    <%= f.label :Wartość_wiedzy %><br>
    <%= f.select :importance_score, [['bardzo dobrze', 5], ['dobrze', 4], ['średnio',3], ['słabo', 2], ['bardzo słabo', 1]] %>
  </p>
  
    <p>
    <%= f.label :Komentarz %><br>
    <%= f.text_area :comment %>
  </p>
  

 
  <p>
    <%= f.submit :Oceń%>
  </p>
<% end %>
<br>
<%= button_to 'Back', scores_path, :method => :get %>
</div>