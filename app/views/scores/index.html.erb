   </style>

  
  <%= csrf_meta_tags %>
</head>

<body>
<center>
<div class="score"> 

<h1>Wprowadź token przedmiotu</h1>

<p style="color:red"><%= params[:me] %></p>
<p style="color:green"><%= params[:ms] %></p>


<%= form_for :survey, :url => new_score_post_path do |f| %>

    <p style="margin-right: 10px;">
    <%= f.label :TOKEN %><br>
    <%= f.text_field :token %>
  </p>
  
  <p>
    <%= f.submit :"Przejdź do ankiety" %>
  </p>
<% end %>

</form>

</div>
</center>
</body>