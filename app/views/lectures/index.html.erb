<h1>Lista przedmiotow</h1>
 <%= link_to 'Dodaj nowy przedmiot', new_lectures_path %><br>
 
<table>
  <tr>
    <th>Przedmiot</th>
    <th>Rok</th>
	  <th>Semestr</th>

  </tr>
 
  <% @all_lectures.each do |lecture| %>
    <tr>
      <td><%= lecture.name %></td>
      <td><%= lecture.year %></td>
	    <td><%=
          if lecture.semester =='Z'
            'Zimowy'
          else
            'Letni'
          end
      %></td>
      <td><%=
          if lecture.score_archives_children? == false
            link_to 'Ankiety', specific_surveys_path(:id => lecture.id)
          end 
      %></td>
	    <td><%=
          if lecture.surveys_children? == false and lecture.score_archives_children? == false
            link_to 'Edytuj', edit_lecture_path(lecture)
          end 
      %></td>
	    <td><%= 
          if lecture.surveys_children? == false and lecture.score_archives_children? == false
            link_to 'UsuÅ„', delete_lecture_path(lecture),
              method: :delete,
              data: { confirm: 'Czy na pewno chcesz usunac ten przedmiot?' } 
          end 
      %></td>          
    </tr>
  <% end %>
</table>